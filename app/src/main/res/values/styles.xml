<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/linear</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/linear</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/header_text</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="ButtonDefault" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="background">@drawable/default_button</item>
        <item name="fontFamily">@font/inter_extrabold</item>
        <item name="android:typeface">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15dp</item>
        <item name="elevation">10dp</item>
    </style>


    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_circle</item>
    </style>

    <style name="CircularPurpleDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_circle_purple</item>
    </style>
    
    <style name="Preview_Header_Text">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:typeface">normal</item>
        <item name="fontFamily">@font/inter_extrabold</item>
    </style>
    
    <style name="Preview_Low_Text">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#ADA4A5</item>

    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ADA4A5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ADA4A5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="DefaultTextInput" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/boxColor</item>
    </style>




</resources>